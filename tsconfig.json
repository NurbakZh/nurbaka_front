{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./",
        "typeRoots": [
            "src/@types",
            "node_modules/@types"
        ],
        "paths": {
            "@src/*": ["src/*"],
            "@app/*": ["src/app/*"],
            "@shared/*": ["src/shared/*"],
            "@assets/*": ["src/shared/assets/*"],
            "@features/*": ["src/features/*"]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}