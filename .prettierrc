{
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "semi": true,
    "printWidth": 80,
    "jsxSingleQuote": true,
    "endOfLine": "auto",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^@src/(.*)$",
        "^@app/(.*)$",
        "^@shared/(.*)$",
        "^@assets/(.*)$",
        "^[./]"
    ],
    "overrides": [
        {
            "files": "**/*Routes.tsx",
            "options": {
                "printWidth": 200
            }
        }
    ],
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true
}